{{#if building.maxWorkers}}
  <AssignPoint @class="ml-2" @disabled={{empire.dead}}
               @value={{building.workers}} @onChange={{action "assignWorker"}}
               @step={{step}} @max={{maxWorkers}}>
    {{capitalize building.name}}: <DisplayValue @tagName="span" @type="worker" @value={{workersDisplay}}/>
  </AssignPoint>
{{/if}}
{{#if (not building.isCapital)}}
  <AssignPoint @class="ml-2" @disabled={{empire.dead}}
               @value={{building.pending}} @onChange={{action "build"}}
               @step={{step}} @max={{maxBuilds}}>
    Construct more {{building.name}}: {{building.qty}} ({{building.pending}}) ({{building.materialCost}} material)
  </AssignPoint>
{{/if}}