<div>
  {{model.name}} currently has {{model.food}} food.
  {{#if (gte model.foodProduction 0)}}
    You generate {{model.foodProduction}} food per turn.
  {{else}}
    You are losing {{model.foodProduction}} food per turn.
  {{/if}}
</div>
{{#if empireCtl.isLowFood}}
  <div class="text-danger">
    You will lose some population next turn.
  </div>
{{/if}}
<AssignPoint @class="ml-2" @isVisible={{workerHunterAvailable}}
             @onLess={{action "lessHunter"}} @onMore={{action "moreHunter"}}
             @canBeLess={{gt model.workerHunter 0}} @canBeMore={{gt model.availableWorkers 0}}>
  Hunter{{if (gt model.workerHunter 1) "s"}}: {{model.workerHunter}}
</AssignPoint>
<button type="button"
        class="btn btn-outline-success"
        hidden={{not isGenFoodAvailable}}
        disabled={{isGenFoodDisabled}}
        onclick={{action "genFood"}}>
  Horn of Plenty <DisplayValue @tagName="small" @type="magic" @value="1" />
</button>
{{outlet}}