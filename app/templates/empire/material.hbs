<div>
  {{model.name}} has {{model.materialStorage}} warehouse{{if (gt model.materialStorage 1) "s"}} and can store a maximum of {{model.maxMaterial}}.
  <AssignPoint @class="ml-2" @disabled={{model.dead}}
               @value={{model.pendingMaterialStorage}} @onChange={{action "changePendingMaterialStorage"}}
               @step={{empireCtl.assignValue}} @max={{maxPendingMaterialStorage}}>
    Construct more warehouses: {{model.pendingMaterialStorage}} (100 material)
  </AssignPoint>
  <button type="button"
          class="btn btn-outline-success"
          hidden={{not isGenMaterialStorageAvailable}}
          disabled={{isGenMaterialStorageDisabled}}
          onclick={{action "genMaterialStorage"}}>
    Holy Building<DisplayValue @tagName="small" @type="magic" @value="50" />
  </button>
</div>
<hr>
<div>
  {{model.name}} has {{model.material}} material.
  {{#if model.materialProduction}}
    You generate {{model.materialProduction}} material per turn.
  {{/if}}
</div>
<AssignPoint @class="ml-2" @isVisible={{workerGathererAvailable}} @disabled={{model.dead}}
             @value={{model.workerGatherer}} @onChange={{action "changeGatherer"}}
             @step={{empireCtl.assignValue}} @max={{maxGatherer}}>
  Gatherer{{if (gt model.workerGatherer 1) "s"}}: {{model.workerGatherer}}
</AssignPoint>
<button type="button"
        class="btn btn-outline-success"
        hidden={{not isGenMaterialAvailable}}
        disabled={{isGenMaterialDisabled}}
        onclick={{action "genMaterial"}}>
  Magic Anvil<DisplayValue @tagName="small" @type="magic" @value="1" />
</button>
{{outlet}}