{{#ember-notify messageStyle="bootstrap" as |message|}}
  {{#link-to "achievements"}}
    {{message.text}}
  {{/link-to}}
{{/ember-notify}}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  {{#link-to "index" class="navbar-brand mr-auto"}}
    {{model.name}}
  {{/link-to}}
  <ul class="navbar-nav">
    <DisplayValue @tagName="li" @class="nav-item mx-2" @visible={{model.manaUnlocked}} @type="mana" @value={{model.mana}} />
    <DisplayValue @tagName="li" @class="nav-item mx-2" @visible={{model.cultureUnlocked}} @type="culture" @value={{model.culture}} />
    <DisplayValue @tagName="li" @class="nav-item mx-2" @visible={{model.moneyUnlocked}} @type="money" @value={{model.money}} />
    <DisplayValue @tagName="li" @class="nav-item mx-2" @visible={{model.scienceUnlocked}} @type="science" @value={{model.science}} />
  </ul>
</nav>
<div class="container-fluid">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      {{#link-to "empire" class="nav-link"}}
        {{this.game.empire.name}}
      {{/link-to}}
    </li>
    <li class="nav-item">
      {{#link-to "templates" class="nav-link"}}
        Templates
        {{#if game.empire.nextManaPoints}}
          <DisplayValue @tagName="span" @class="badge badge-pill badge-secondary" @type="mana" @value={{game.empire.nextManaPoints}} />
        {{/if}}
      {{/link-to}}
    </li>
    <li class="nav-item">
      {{#link-to "upgrades" class="nav-link"}}
        Upgrades
      {{/link-to}}
    </li>
    <li class="nav-item">
      {{#link-to "achievements" class="nav-link"}}
        Achievements
      {{/link-to}}
    </li>
    <li class="nav-item ml-auto">
      {{#link-to "settings" class="nav-link"}}
        Settings
      {{/link-to}}
    </li>
  </ul>
</div>
{{outlet}}