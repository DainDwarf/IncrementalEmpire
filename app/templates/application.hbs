{{#ember-notify messageStyle="bootstrap" as |message|}}
  {{#link-to "achievements"}}
    {{message.text}}
  {{/link-to}}
{{/ember-notify}}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  {{#link-to "index" class="navbar-brand mr-auto"}}
    {{model.name}}
  {{/link-to}}
  <ul class="navbar-nav">
    <li class="nav-item mx-2" hidden={{isManaHidden}}><FaIcon @icon="dot-circle" /> {{model.mana}}</li>
    <li class="nav-item mx-2" hidden={{isCultureHidden}}><FaIcon @icon="book" /> {{model.culture}}</li>
    <li class="nav-item mx-2" hidden={{isMoneyHidden}}><FaIcon @icon="coins" /> {{model.money}}</li>
    <li class="nav-item mx-2" hidden={{isScienceHidden}}><FaIcon @icon="flask" /> {{model.science}}</li>
  </ul>
</nav>
<div class="container-fluid">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      {{#link-to "empire" class="nav-link"}}
        {{this.game.empire.name}}
      {{/link-to}}
    </li>
    <li class="nav-item">
      {{#link-to "templates" class="nav-link"}}
        Templates
      {{/link-to}}
    </li>
    <li class="nav-item">
      {{#link-to "upgrades" class="nav-link"}}
        Upgrades
      {{/link-to}}
    </li>
    <li class="nav-item">
      {{#link-to "achievements" class="nav-link"}}
        Achievements
      {{/link-to}}
    </li>
    <li class="nav-item ml-auto">
      {{#link-to "settings" class="nav-link"}}
        Settings
      {{/link-to}}
    </li>
  </ul>
</div>
{{outlet}}