<div class="row mx-2 my-2">
  {{#each model as |upgrade|}}
    <div class="col-sm-3">
      <div class="card">
        <div class="card-header {{if upgrade.isActive "bg-success"}}">
          {{upgrade.name}}
        </div>
        <div class="card-body">
          <p class="card-text">{{upgrade.description}}</p>
          <button type="button" class="btn btn-primary" hidden={{upgrade.isActive}} disabled={{upgrade.cannotBuy}} onclick={{action "buy" upgrade}}>
            Buy for
            {{#if upgrade.manaCost}}
              <IconPoint @tagName="span" @type="mana" @point={{upgrade.manaCost}} />
            {{/if}}
            {{#if upgrade.cultureCost}}
              <IconPoint @tagName="span" @type="culture" @point={{upgrade.cultureCost}} />
            {{/if}}
            {{#if upgrade.moneyCost}}
              <IconPoint @tagName="span" @type="money" @point={{upgrade.moneyCost}} />
            {{/if}}
            {{#if upgrade.scienceCost}}
              <IconPoint @tagName="span" @type="science" @point={{upgrade.scienceCost}} />
            {{/if}}
          </button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
{{outlet}}